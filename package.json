{
  "name": "medley",
  "productName": "Medley",
  "description": "A tag-based note taking app using Markdown for formatting.",
  "author": {
    "name": "Victor Johnson",
    "email": "vicjohnson1213@gmail.com",
    "url": "https://vicjohnson1213.github.io"
  },
  "version": "0.1.0",
  "manifestVersion": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "ng": "ng",
    "build": "ng build --base-href ./",
    "watch": "ng build --base-href ./ --watch=true",
    "start": "ng build --base-href ./ && electron .",
    "build:prod": "ng build --base-href ./ --prod",
    "electron": "electron .",
    "dist": "npm run build:prod && build",
    "publish": "npm run build:prod && build -p always"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "angular-resize-event": "^1.0.0",
    "angular-split": "^3.0.0-beta.5",
    "core-js": "^2.5.4",
    "electron-updater": "^4.0.6",
    "highlight.js": "^9.15.6",
    "marked": "^0.6.2",
    "monaco-editor": "^0.17.0",
    "rxjs": "~6.3.3",
    "subsink": "^1.0.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.9",
    "@angular/cli": "^7.3.9",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/language-service": "~7.2.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "electron": "^9.4.0",
    "electron-builder": "^20.40.2",
    "electron-reloader": "^0.2.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  },
  "build": {
    "appId": "com.vicjohnson1213.Medley",
    "directories": {
      "output": "releases"
    },
    "mac": {
      "icon": "build/icon-512.png",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "${productName} Setup.${ext}"
    },
    "nsis": {
      "uninstallDisplayName": "${productName}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "vicjohnson1213",
        "repo": "Medley"
      }
    ]
  }
}
